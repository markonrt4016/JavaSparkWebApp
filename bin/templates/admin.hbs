  <script>
    function login(){
      let username = document.querySelector("#username").value;
      let password = document.querySelector("#password").value;

      if (username!="" && password!="") {
        $.ajax({
          type: "POST",
          url: "/login",
          data: { 
            "username": username, 
            "password":  password
          },
          success: function (response) {
            console.log(response)
            if (response === "ok") {
              localStorage.setItem("loggedIn", response);
              window.location.href = "/adminGlavniPanel";
            }
            else{
              alert("Pogresno username ili password!");
            }

          }
        });

      } else {
        alert("Morate uneti username i password!");
      }
    }


    let btn = document.querySelector("#dugme");
    btn.addEventListener("click", login);

  </script>


